                <field id="maintenance_preview" translate="label" sortOrder="500" showInDefault="1" showInWebsite="1" showInStore="0">
                    <button_label>Preview</button_label>
                    <button_url>mpbettermaintenance/maintenance/preview</button_url>
                    <frontend_model>Mageplaza\BetterMaintenance\Block\Adminhtml\System\PreviewButton</frontend_model>
