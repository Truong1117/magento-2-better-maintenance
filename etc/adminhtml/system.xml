                <field id="maintenance_progress_enabled" translate="label" type="select" sortOrder="440" showInDefault="1" showInWebsite="1" showInStore="0" canRestore="1">
                    <label>Show Progress Bar</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="maintenance_progress_value" translate="label" type="text" sortOrder="450" showInDefault="1" showInWebsite="1" showInStore="0" canRestore="1">
                    <label>Progress Value </label>
