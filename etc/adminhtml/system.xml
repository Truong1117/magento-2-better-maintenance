<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="mpbettermaintenance" translate="label" type="text" sortOrder="350" showInDefault="1" showInWebsite="1" showInStore="0">
            <label>Better Maintenance</label>
            <tab>mageplaza</tab>
            <resource>Mageplaza_BetterMaintenance::configuration</resource>
            <group id="general" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="0" canRestore="1">
                <label>General</label>
                <field id="enabled" translate="label comment" type="select" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="0" canRestore="1">
                    <label>Enable</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment><![CDATA[Select <strong>Yes</strong> to enable the module]]></comment>
                </field>
                <field id="real_time" translate="label" type="text" sortOrder="21" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Real Time of Website</label>
                    <frontend_model>Mageplaza\BetterMaintenance\Block\Adminhtml\System\RealTime</frontend_model>
                </field>
                <field id="end_time" translate="label" sortOrder="30" type="date" showInDefault="1" showInStore="0" >
                    <label>End Date Time</label>
                    <frontend_model>Mageplaza\BetterMaintenance\Block\Adminhtml\System\DatePicker</frontend_model>
                </field>
                <field id="redirect_to" translate="label" type="select" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="0" canRestore="1">
                    <label>Redirect To Page</label>
                    <source_model>Mageplaza\BetterMaintenance\Model\Config\Source\System\RedirectTo</source_model>
                </field>
                <field id="auto_switch" translate="label comment" type="select" sortOrder="50" showInDefault="1" showInWebsite="1" showInStore="0" canRestore="1">
                    <label>Auto Switch to Live Site Mode</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment>Your website will automatically switch back to Live Site Mode when configured time ends.</comment>
                </field>
                <field id="whitelist_ip" translate="label comment" type="textarea" sortOrder="60" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Whitelist IP(s)</label>
                    <comment>Seperate by comma(,)</comment>
                </field>
                <field id="whitelist_page" translate="label comment" type="textarea" sortOrder="61" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Whitelist Page Link(s)</label>
                    <comment>Seperate by break line(s)</comment>
                </field>
            </group>
            <group id="display_setting" translate="label" type="text" sortOrder="70" showInDefault="1" showInWebsite="1" showInStore="0" canRestore="1">
                <label>Display Setting</label>
                <group id="clock_setting" translate="label" type="text" sortOrder="80" showInDefault="1" showInWebsite="1" showInStore="0" canRestore="1">
                    <label>Clock Setting</label>
                    <field id="clock_enabled" translate="label" type="select" sortOrder="90" showInDefault="1" showInWebsite="1" showInStore="0" canRestore="1">
                        <label>Enable</label>
                        <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    </field>
                    <field id="clock_template" translate="label" type="select" sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="0">
                        <label>Countdown Clock Style</label>
                        <source_model>Mageplaza\BetterMaintenance\Model\Config\Source\System\ClockTemplate</source_model>
                        <depends>
                            <field id="clock_enabled">1</field>
                        </depends>
                    </field>
                    <field id="clock_background_color" translate="label"  sortOrder="110" type="text" showInDefault="1" showInWebsite="1" showInStore="0">
                        <label>Clock Background Color</label>
                        <frontend_model>Mageplaza\BetterMaintenance\Block\Adminhtml\System\ColorPicker</frontend_model>
                        <depends>
                            <field id="clock_enabled">1</field>
                        </depends>
                    </field>
                    <field id="clock_number_color" translate="label"  sortOrder="120" type="text" showInDefault="1" showInWebsite="1" showInStore="0">
