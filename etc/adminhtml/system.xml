                        <label>Select CMS Block</label>
                        <source_model>Mageplaza\BetterMaintenance\Model\Config\Source\System\CmsBlock</source_model>
                        <comment>List the links in the selected block in the Whitelist(s) Page Link field below so that customers can access them.</comment>
                    </field>
                </group>
                <group id="social_contact" translate="label" type="text" sortOrder="230" showInDefault="1" showInWebsite="1" showInStore="0" canRestore="1">
                    <label>Social Contact</label>
                    <field id="social_enabled" translate="label" type="select" sortOrder="240" showInDefault="1" showInWebsite="1" showInStore="0" canRestore="1">
