                <group id="subscribe_setting" translate="label" type="text" sortOrder="130" showInDefault="1" showInWebsite="1" showInStore="0" canRestore="1">
                    <label>Subscribe Setting</label>
                    <field id="subscribe_type" translate="label" type="select" sortOrder="140" showInDefault="1" showInWebsite="1" showInStore="0" canRestore="1">
                        <label>Subscribe Type</label>
                        <source_model>Mageplaza\BetterMaintenance\Model\Config\Source\System\SubscribeType</source_model>
                    </field>
                    <field id="subscribe_label" translate="label" type="text" sortOrder="150" showInDefault="1" showInWebsite="1" showInStore="0">
                        <label>Subscribe Description</label>
                        <depends>
                            <field id="subscribe_type" separator=",">register_form,email_form</field>
                        </depends>
                    </field>
                    <field id="subscribe_label_color" translate="label" sortOrder="160" type="text" showInDefault="1" showInWebsite="1" showInStore="0">
                        <label>Subscribe Label Color</label>
                        <frontend_model>Mageplaza\BetterMaintenance\Block\Adminhtml\System\ColorPicker</frontend_model>
                        <depends>
                            <field id="subscribe_type" separator=",">register_form,email_form</field>
                        </depends>
                    </field>
                    <field id="button_label" translate="label" type="text" sortOrder="170" showInDefault="1" showInWebsite="1" showInStore="0" canRestore="1">
