<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="empty" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="Mageplaza_BetterMaintenance::css/style.css"/>
    </head>
    <body>

        <referenceContainer name="page.wrapper" remove="true"/>
        <container name="mpbettermaintenance-maintenance-page">
            <block class="Mageplaza\BetterMaintenance\Block\Maintenance" name="mpbettermaintenance.page" template="Mageplaza_BetterMaintenance::maintenance.phtml">
                <block class="Mageplaza\BetterMaintenance\Block\Clock" name="mpbettermaintenance.clock" as="clock_countdown" template="Mageplaza_BetterMaintenance::clock/timer.phtml"/>
            </block>
        </container>
    </body>
</page>