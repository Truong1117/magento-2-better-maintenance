use Mageplaza\BetterMaintenance\Helper\Data;

/** @var \Mageplaza\BetterMaintenance\Block\Clock $block */
$helper               = $this->helper(Data::class);
$clockBackgroundColor = $helper->getClockSetting('clock_background_color');
$clockNumberColor     = $helper->getClockSetting('clock_number_color');

$template = $block->getClockTemplate($helper->getClockSetting('clock_template'));
$timerId  = uniqid('', false);

if (!empty($template)) : ?>
    <div id="mp-countdown-timer-<?= $timerId ?>">
        <?= $template ?>
    </div>

    <style type="text/css">
        #mp-countdown-timer-<?= $timerId ?> .mp-countdown-txt {
            color: <?= $clockNumberColor ?>;
        }

        #mp-countdown-timer-<?= $timerId ?> .mp-countdown-days {
            color: <?= $clockNumberColor ?>;
        }

        #mp-countdown-timer-<?= $timerId ?> .mp-countdown-hours {
            color: <?= $clockNumberColor ?>;
        }

        #mp-countdown-timer-<?= $timerId ?> .mp-countdown-minutes {
            color: <?= $clockNumberColor ?>;
        }

        #mp-countdown-timer-<?= $timerId ?> .mp-countdown-seconds {
            color: <?= $clockNumberColor ?>;
        }

        <?php if (strpos($template, 'circle') !== false || strpos($template, 'square') !== false || strpos($template, 'stack') !== false): ?>
        #mp-countdown-timer-<?= $timerId ?> .mp-countdown-clock {
            background-color: <?= $clockBackgroundColor ?>;
            border-color: <?= $clockBackgroundColor ?>;
        }

        <?php endif; ?>
        <?php if (strpos($template, 'modern') !== false): ?>
        #mp-countdown-timer-<?= $timerId ?> .countdown-modern {
            background: <?= $clockBackgroundColor ?>;
            border-color: <?= $clockBackgroundColor ?>;
        }

        <?php endif; ?>
    </style>

    <script type="text/x-magento-init">
    {
        "#mp-countdown-timer-<?= $timerId ?>": {
            "Mageplaza_BetterMaintenance/js/clock/mpcountdowntimer": {
                "timer_id": "#mp-countdown-timer-<?= $timerId ?>",
                "timezone": "<?= $block->getTimeZone() ?>",
                "endtime": "<?= $helper->getConfigGeneral('end_time') ?>",
                "enabled": <?= $helper->isEnabled() ?>,
                "currentTime": "<?= $block->getCurrentTime() ?>",
                "baseUrl": "<?= $block->getBaseUrl() ?>",
                "autoSwitch": <?= $helper->getConfigGeneral('auto_switch') ?>
            }
        }
    }

    </script>

<?php endif; ?>