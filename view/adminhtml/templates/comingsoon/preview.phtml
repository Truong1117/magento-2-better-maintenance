<?php $data = $block->getFormData(); ?>
<!--Multiple Image Background-->
<?php if ($data['[comingsoon_background]'] === 'multiple_images') : ?>
    <?php $listImagesUrl = implode(',', $block->getMultipleImagesUrl('comingsoon_background_multi_image')); ?>
    <style>
        .mpbettermaintenance-comingsoon-preview {
            background-repeat: no-repeat;
            background-size: cover;
            transition-delay: 2s;
        }
    </style>
    <script>
        require([
            'jquery'
        ], function ($) {
            var images    = '<?= /* @noEscape */ $listImagesUrl ?>';
            images        = images.split(',');
            var nextImage = 0;
            doSlideShow();

            function doSlideShow () {
                if (nextImage >= images.length) {
                    nextImage = 0;
                }
                $('.mpbettermaintenance-comingsoon-preview')
                .fadeIn('slow', function () {
                    setTimeout(doSlideShow, 5000);
                }).css('background-image', 'url("' + images[nextImage++] + '")');
            }
        });
    </script>
<?php endif; ?>

<!--Single Image Background-->
<?php if ($data['[comingsoon_background]'] === 'image'
    && $block->getImageUrl($data['[comingsoon_background_image]'])) : ?>
    <style>
        .mpbettermaintenance-comingsoon-preview {
            background-image: url("<?= /* @noEscape */ $block->getImageUrl($data['[comingsoon_background_image]']) ?>");
            background-repeat: no-repeat;
            background-size: cover;
        }
    </style>
<?php endif; ?>

<!--Video Background-->
<?php if ($data['[comingsoon_background]'] === 'video'
    && $block->getVideoUrl($data['[comingsoon_background_video]'])) : ?>
    <video autoplay muted loop id="mpbm-video">
        <source src="<?= /* @noEscape */ $block->getVideoUrl($data['[comingsoon_background_video]']) ?>"
                type="video/mp4">
    </video>
<?php endif; ?>
<div id="mpbm-<?= /* @noEscape */ $block->getPageLayout('[comingsoon_layout]') ?>-column" class="mpbm-preview-wrapper">
    <?php if (!empty($data['[comingsoon_logo]'])) : ?>
